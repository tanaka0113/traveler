<div class="cover-new">
  <div class="cover-overlay">
    <div class="posts-new">
      <h1 class="page-title">旅行新規投稿</h1>

      <% if @post.errors.any? %>
        <div class="card text-center text-white bg-danger mt-3 mb-3 p-2">
          <%= @post.errors.count %>件のエラーが発生しました<br>
          <%= @post.errors.full_messages.join(' / ') %>
        </div>
      <% end %>

      <%= form_with model: @post, local: true, html: { multipart: true } do |f| %>

        <div class="form-group">
          <label>旅行先</label>
          <%= f.text_field :location, class: "form-control" %>
        </div>

        <div class="form-group">
          <label>感想</label>
          <%= f.text_area :text, rows: 10, class: "form-control" %>
        </div>

        <!-- ★ これを追加 -->
        <div class="form-group">
          <label>画像</label>
          <%= f.file_field :image, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.select :status,
              Post.statuses.keys.map { |k| [t("enums.post.status.#{k}"), k] },
              {},
              { class: "custom-select w-25 mb-3" } %>
        </div>

        <%= f.submit "投稿する", class: "btn btn-success" %>

      <% end %>
    </div>
  </div>
</div>
