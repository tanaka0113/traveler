/* =========================
   新規投稿ページ（new）
   ========================= */

/* 背景 */
.cover-new {
  min-height: 100vh;
  width: 100%;
  padding-top: 40px;

  background-image: url("/assets/new-scaled.jpg");
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}
.cover-overlay {
  min-height: 100vh;
  width: 100%;

  background: rgba(255, 255, 255, 0.45);

  display: flex;
  justify-content: center;

  padding-top: 40px;
}

/* 新規投稿フォーム */
.posts-new {
  margin: 40px auto;
  padding: 24px;
  width: 600px;

  background: rgba(255, 255, 255, 0.95);
  border-radius: 12px;
  box-shadow: 0 12px 32px rgba(0, 0, 0, 0.18);

  h1 {
    font-family: serif;
    color: #000;          /* ← これを追加 */
    text-shadow: none;    /* ← 念のため影も消す */
  }

  label {
    font-weight: bold;
    font-size: 20px;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.4);
  }

  .form-group {
    width: 100%;
  }
}


/* =========================
   ページネーション
   ========================= */

.page a,
.next a,
.last a,
.first a,
.prev a {
  color: black;
  margin-left: 10px;
  margin-right: 10px;
}

.page a:hover,
.next a:hover,
.last a:hover,
.first a:hover,
.prev a:hover {
  color: black;
}

.current {
  font-weight: bold;
}
/* 投稿一覧ページ（index） */
.cover-index {
  min-height: 110vh; /* ← ここだけ変更 */
  width: 100%;
  background-image: asset-url("index-scaled.jpg");
  background-color: rgba(255, 255, 255, 0.4);
  background-blend-mode: lighten;
  background-size: cover;
  background-position: center;
}


/* 投稿詳細ページ（show） */
.cover-show {
  min-height: 100vh;
  width: 100%;
  background-image: asset-url("show-scaled.jpg");
  background-color: rgba(255, 255, 255, 0.4);
  background-blend-mode: lighten;
  background-size: cover;
  background-position: center;
}
/* 投稿詳細：投稿＋コメント 横並び */
.post-and-comments {
  display: flex;
  gap: 40px;
  align-items: flex-start;
}

.post-detail {
  width: 50%;
}

.comments {
  width: 50%;
  margin-top: 40px;
}


/* 投稿編集ページ（edit） */
.cover-edit {
  min-height: 100vh;
  width: 100%;
  background-image: asset-url("edit-scaled.jpg");
  background-color: rgba(255, 255, 255, 0.4);
  background-blend-mode: lighten;
  background-size: cover;
  background-position: center;
}


/* ===== コメントエリア ===== */

.comments-index {
  background: #ffffff;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 12px 16px;
  margin-bottom: 12px;
}

.comments-index strong {
  font-size: 14px;
}

.comments-index .d-flex {
  margin-top: 6px;
}

.comment-delete {
  margin-left: auto;
}

.comments textarea {
  width: 100%;
  border-radius: 6px;
  border: 1px solid #ccc;
  padding: 8px;
}

.favorite_btn {
  color: #000;
}
