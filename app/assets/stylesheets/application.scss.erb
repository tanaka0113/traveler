@import "bootstrap";
@import "homes";
@import "posts";
@import "users";   // ← ★これを追加


html,
body {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}

.profiler-results {
  display: none;
}

.cover-new {
  min-height: 100vh;
  padding: 80px 0 40px;   // ← ここを 160px → 40px に
  background-image: asset-url("new-scaled.jpg");
  background-size: cover;
  background-position: center;
}

.cover-new h1 {
  color: #fff;
  text-shadow: 0 2px 6px rgba(0,0,0,0.6);
  margin-left: 40px;
}
.posts-new {
  margin: 40px auto 0;        // ← これが正解
  background: rgba(255,255,255,0.95);
  padding: 24px;
  border-radius: 12px;
  max-width: 800px;
}

.form-group {
  margin-bottom: 24px;
}

header {
  display: flex;
  background-color: black;
}

header div:first-child {
  margin-right: auto;
  font-size: 25px;
}

header div:last-child {
  margin-right: 30px;
}

header div {
  margin-left: 30px;
  line-height: 30px;
}

.nav-link {
  text-decoration: none;
}

a:hover {
  color: aqua !important;
}
